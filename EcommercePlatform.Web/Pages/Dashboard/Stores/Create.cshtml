@page
@model EcommercePlatform.Web.Pages.Dashboard.Stores.CreateModel
@{
    ViewData["Title"] = "إنشاء متجر جديد";
}



<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3>إنشاء متجر إلكتروني جديد</h3>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="Store.Name" class="form-label">اسم المتجر</label>
                            <input asp-for="Store.Name" class="form-control" required />
                            <span asp-validation-for="Store.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Store.Slug" class="form-label">الاسم المستعار (URL)</label>
                            <div class="input-group">
                                <span class="input-group-text">yourplatform.com/stores/</span>
                                <input asp-for="Store.Slug" class="form-control" required />
                            </div>
                            <small class="form-text text-muted">استخدم حروف إنجليزية صغيرة وأرقام وشرطات فقط</small>
                            <span asp-validation-for="Store.Slug" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Store.Description" class="form-label">وصف المتجر</label>
                            <textarea asp-for="Store.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Store.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Store.SubscriptionPlanId" class="form-label">خطة الاشتراك</label>
                            <select asp-for="Store.SubscriptionPlanId" class="form-select" asp-items="Model.SubscriptionPlans" required>
                                <option value="">-- اختر الخطة --</option>
                            </select>
                            <span asp-validation-for="Store.SubscriptionPlanId" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">إنشاء المتجر</button>
                            <a asp-page="/Dashboard/Index" class="btn btn-secondary">إلغاء</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}