@page
@model EcommercePlatform.Web.Pages.Dashboard.IndexModel
@{
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>متاجري</h2>
                <a asp-page="/Dashboard/Stores/Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> إنشاء متجر جديد
                </a>
            </div>

            @if (Model.Stores.Any())
            {
                <div class="row">
                    @foreach (var store in Model.Stores)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                @if (!string.IsNullOrEmpty(store.LogoUrl))
                                {
                                    <img src="@store.LogoUrl" class="card-img-top" alt="@store.Name" style="height: 200px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <i class="bi bi-shop fs-1 text-white"></i>
                                    </div>
                                }
                                <div class="card-body">
                                    <h5 class="card-title">@store.Name</h5>
                                    <p class="card-text text-muted">@store.Description</p>
                                    <div class="mb-2">
                                        <span class="badge bg-info">@store.SubscriptionPlan.Name</span>
                                        @if (store.IsActive)
                                        {
                                            <span class="badge bg-success">نشط</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">غير نشط</span>
                                        }
                                    </div>
                                    <div class="d-flex gap-2">
                                        <a asp-page="/Dashboard/Stores/Manage" asp-route-id="@store.Id" class="btn btn-sm btn-primary flex-fill">
                                            إدارة المتجر
                                        </a>
                                        <a href="/stores/@store.Slug" target="_blank" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-box-arrow-up-right"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="card-footer text-muted small">
                                    تاريخ الإنشاء: @store.CreatedAt.ToString("yyyy-MM-dd")
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <h4>لا توجد متاجر بعد</h4>
                    <p>ابدأ بإنشاء متجرك الإلكتروني الأول الآن!</p>
                    <a asp-page="/Dashboard/Stores/Create" class="btn btn-primary">إنشاء متجر</a>
                </div>
            }
        </div>
    </div>
</div>