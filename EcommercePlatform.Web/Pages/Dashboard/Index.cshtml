@page
@model EcommercePlatform.Web.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "لوحة التحكم";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>لوحة التحكم</h2>
        @if (Model.UserStore == null)
        {
            <a asp-page="/Dashboard/Stores/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> إنشاء متجر جديد
            </a>
        }
    </div>

    @if (Model.UserStore != null)
    {
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card">
                    @if (!string.IsNullOrEmpty(Model.UserStore.LogoUrl))
                    {
                        <img src="@Model.UserStore.LogoUrl" class="card-img-top" alt="@Model.UserStore.Name" style="height: 250px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 250px;">
                            <i class="bi bi-shop fs-1 text-white"></i>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@Model.UserStore.Name</h5>
                        <p class="card-text text-muted">@Model.UserStore.Description</p>
                        <div class="mb-2">
                            @if (Model.UserStore.IsActive)
                            {
                                <span class="badge bg-success">نشط</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">غير نشط</span>
                            }
                        </div>
                        <div class="d-flex gap-2 mt-3">
                            <a asp-page="/Dashboard/Products/Index" class="btn btn-primary flex-fill">
                                <i class="bi bi-box-seam"></i> إدارة المنتجات
                            </a>
                            <a href="/stores/@Model.UserStore.Slug" target="_blank" class="btn btn-outline-secondary">
                                <i class="bi bi-box-arrow-up-right"></i> عرض المتجر
                            </a>
                        </div>
                    </div>
                    <div class="card-footer text-muted small">
                        تاريخ الإنشاء: @Model.UserStore.CreatedAt.ToString("yyyy-MM-dd")
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <h4>لم تقم بإنشاء متجر بعد</h4>
            <p>ابدأ بإنشاء متجرك الإلكتروني الأول الآن لعرض منتجاتك وإدارتها.</p>
            <a asp-page="/Dashboard/Stores/Create" class="btn btn-primary mt-2">إنشاء متجر الآن</a>
        </div>
    }
</div>
