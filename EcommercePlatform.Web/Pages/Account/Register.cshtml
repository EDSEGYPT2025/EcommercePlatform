@page
@model EcommercePlatform.Web.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "إنشاء حساب جديد";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="fw-bold">إنشاء حساب جديد</h2>
                        <p class="text-muted">ابدأ رحلتك معنا اليوم</p>
                    </div>

                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Input.FullName" class="form-label">
                                <i class="bi bi-person"></i> الاسم الكامل
                            </label>
                            <input asp-for="Input.FullName" class="form-control form-control-lg" placeholder="أحمد محمد" />
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">
                                <i class="bi bi-envelope"></i> البريد الإلكتروني
                            </label>
                            <input asp-for="Input.Email" class="form-control form-control-lg" placeholder="example@email.com" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">
                                <i class="bi bi-lock"></i> كلمة المرور
                            </label>
                            <input asp-for="Input.Password" class="form-control form-control-lg" placeholder="••••••••" />
                            <small class="form-text text-muted">
                                يجب أن تحتوي على 6 أحرف على الأقل، حرف كبير، حرف صغير، ورقم
                            </small>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label">
                                <i class="bi bi-lock-fill"></i> تأكيد كلمة المرور
                            </label>
                            <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" placeholder="••••••••" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-person-plus"></i> إنشاء الحساب
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="mb-0">
                                لديك حساب بالفعل؟
                                <a asp-page="/Account/Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-bold">
                                    سجل الدخول
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}