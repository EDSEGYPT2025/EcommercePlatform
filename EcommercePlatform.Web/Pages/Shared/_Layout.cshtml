<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - منصة المتاجر الإلكترونية</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" asp-page="/Index">
                    <i class="bi bi-shop"></i> منصة المتاجر
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">الرئيسية</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#features">المميزات</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#pricing">الأسعار</a>
                        </li>
                    </ul>
                    <div class="d-flex gap-2">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-page="/Dashboard/Index" class="btn btn-outline-primary">
                                <i class="bi bi-speedometer2"></i> لوحة التحكم
                            </a>
                            <form method="post" asp-page="/Account/Logout" class="d-inline">
                                <button type="submit" class="btn btn-outline-secondary">
                                    <i class="bi bi-box-arrow-right"></i> تسجيل خروج
                                </button>
                            </form>
                        }
                        else
                        {
                            <a asp-page="/Account/Login" class="btn btn-outline-primary">
                                <i class="bi bi-box-arrow-in-right"></i> تسجيل دخول
                            </a>
                            <a asp-page="/Account/Register" class="btn btn-primary">
                                <i class="bi bi-person-plus"></i> إنشاء حساب
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5><i class="bi bi-shop"></i> منصة المتاجر</h5>
                    <p class="text-muted">منصة شاملة لإنشاء وإدارة المتاجر الإلكترونية بسهولة</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>روابط سريعة</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white-50 text-decoration-none">عن المنصة</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none">الشروط والأحكام</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none">سياسة الخصوصية</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none">اتصل بنا</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>تواصل معنا</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="bi bi-envelope"></i> edsegypt@outlook.com</li>
                        <li class="mb-2"><i class="bi bi-telephone"></i> 01010475455</li>
                        <li>
                            <a href="#" class="text-white-50 me-2"><i class="bi bi-facebook fs-4"></i></a>
                            <a href="#" class="text-white-50 me-2"><i class="bi bi-twitter fs-4"></i></a>
                            <a href="#" class="text-white-50 me-2"><i class="bi bi-instagram fs-4"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
            <hr class="bg-secondary">
            <div class="text-center">
                <p class="mb-0 text-muted">&copy; @DateTime.Now.Year منصة المتاجر الإلكترونية - جميع الحقوق محفوظة</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>