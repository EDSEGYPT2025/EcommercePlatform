@page "/stores/{storeSlug}"
@model EcommercePlatform.Web.Pages.Stores.ViewModel
@{
    ViewData["Title"] = Model.Store.Name;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card store-header-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <img src="@Model.Store.LogoUrl" alt="Store Logo" class="store-logo rounded-circle me-3"
                             onerror="this.onerror=null; this.src='/images/placeholder.png';">
                        <div>
                            <h1 class="store-name">@Model.Store.Name</h1>
                            <p class="store-description text-muted">@Model.Store.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <h2 class="mb-3">المنتجات</h2>
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
                @foreach (var product in Model.Products)
                {
                    <div class="col">
                        <div class="card h-100 product-card">
                            <a asp-page="/Products/View" asp-route-storeSlug="@Model.Store.Slug" asp-route-productSlug="@product.Slug">
                                <img src="@product.MainImage" class="card-img-top" alt="@product.Name"
                                     onerror="this.onerror=null; this.src='/images/placeholder.png';">
                            </a>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text text-muted">@product.Description.Substring(0, Math.Min(product.Description.Length, 100))...</p>
                                <div class="mt-auto">
                                    <p class="product-price">@product.Price.ToString("C")</p>
                                    <form method="post" asp-page-handler="AddToCart">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <input type="hidden" name="storeSlug" value="@Model.Store.Slug" />
                                        <button type="submit" class="btn btn-primary w-100">
                                            <i class="bi bi-cart-plus"></i> إضافة للسلة
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .store-header-card {
        border: none;
        background-color: #f8f9fa;
    }

    .store-logo {
        width: 100px;
        height: 100px;
        object-fit: cover;
    }

    .product-card {
        transition: transform .2s, box-shadow .2s;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 12px rgba(0,0,0,.1);
        }

    .product-price {
        font-size: 1.25rem;
        font-weight: bold;
        color: #007bff;
    }
</style>
