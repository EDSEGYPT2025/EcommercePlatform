@page
@model EcommercePlatform.Web.Pages.Dashboard.Products.IndexModel
@{
    ViewData["Title"] = "إدارة المنتجات";
}


// Pages/Dashboard/Products/Index.cshtml


<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>منتجات @Model.CurrentStore.Name</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Dashboard/Index">لوحة التحكم</a></li>
                    <li class="breadcrumb-item active">المنتجات</li>
                </ol>
            </nav>
        </div>
        <a asp-page="/Dashboard/Products/Create" asp-route-storeId="@Model.StoreId" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> إضافة منتج جديد
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Products.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>الصورة</th>
                                <th>اسم المنتج</th>
                                <th>التصنيف</th>
                                <th>السعر</th>
                                <th>المخزون</th>
                                <th>الحالة</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.Products)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(product.MainImage))
                                        {
                                            <img src="@product.MainImage" alt="@product.Name" style="width: 50px; height: 50px; object-fit: cover;" class="rounded">
                                        }
                                        else
                                        {
                                            <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                                <i class="bi bi-image text-white"></i>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <strong>@product.Name</strong>
                                        <br>
                                        <small class="text-muted">@product.Slug</small>
                                    </td>
                                    <td>
                                        @if (product.Category != null)
                                        {
                                            <span class="badge bg-secondary">@product.Category.Name</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <strong>@product.Price.ToString("N0") جنيه</strong>
                                        @if (product.CompareAtPrice.HasValue && product.CompareAtPrice > product.Price)
                                        {
                                            <br>
                                            <small class="text-muted text-decoration-line-through">@product.CompareAtPrice.Value.ToString("N0")</small>
                                        }
                                    </td>
                                    <td>
                                        @if (product.Stock > 10)
                                        {
                                            <span class="badge bg-success">@product.Stock</span>
                                        }
                                        else if (product.Stock > 0)
                                        {
                                            <span class="badge bg-warning">@product.Stock</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">نفذ</span>
                                        }
                                    </td>
                                    <td>
                                        @if (product.IsActive)
                                        {
                                            <span class="badge bg-success">نشط</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">غير نشط</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-page="/Dashboard/Products/Edit" asp-route-id="@product.Id" asp-route-storeId="@Model.StoreId" class="btn btn-outline-primary" title="تعديل">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form method="post" asp-page-handler="Delete" asp-route-productId="@product.Id" asp-route-storeId="@Model.StoreId" onsubmit="return confirm('هل أنت متأكد من حذف هذا المنتج؟');" class="d-inline">
                                                <button type="submit" class="btn btn-outline-danger" title="حذف">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4>لا توجد منتجات بعد</h4>
            <p>ابدأ بإضافة منتجاتك الآن!</p>
            <a asp-page="/Dashboard/Products/Create" asp-route-storeId="@Model.StoreId" class="btn btn-primary">إضافة منتج</a>
        </div>
    }
</div>