
@page
@model EcommercePlatform.Web.Pages.Account.LoginModel
@{
    ViewData["Title"] = "تسجيل الدخول";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="fw-bold">تسجيل الدخول</h2>
                        <p class="text-muted">أهلاً بك مرة أخرى!</p>
                    </div>

                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">
                                <i class="bi bi-envelope"></i> البريد الإلكتروني
                            </label>
                            <input asp-for="Input.Email" class="form-control form-control-lg" placeholder="example@email.com" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">
                                <i class="bi bi-lock"></i> كلمة المرور
                            </label>
                            <input asp-for="Input.Password" class="form-control form-control-lg" placeholder="••••••••" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            <label asp-for="Input.RememberMe" class="form-check-label">
                                تذكرني
                            </label>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right"></i> تسجيل الدخول
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="mb-0">
                                ليس لديك حساب؟
                                <a asp-page="/Account/Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-bold">
                                    سجل الآن
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}