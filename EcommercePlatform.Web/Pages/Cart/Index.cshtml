@page "/stores/{storeSlug}/cart"
@model EcommercePlatform.Web.Pages.Cart.IndexModel
@{
    ViewData["Title"] = "سلة التسوق";

}


// Pages/Cart/Index.cshtml


<div class="container mt-4">
    <h2 class="mb-4">
        <i class="bi bi-cart3"></i> سلة التسوق
    </h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Cart.Items.Any())
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        @foreach (var item in Model.Cart.Items)
                        {
                            <div class="row align-items-center mb-3 pb-3 border-bottom">
                                <div class="col-md-2">
                                    @if (!string.IsNullOrEmpty(item.ProductImage))
                                    {
                                        <img src="@item.ProductImage" alt="@item.ProductName" class="img-fluid rounded">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="height: 80px;">
                                            <i class="bi bi-image text-white"></i>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-4">
                                    <h6 class="mb-0">@item.ProductName</h6>
                                    <small class="text-muted">@item.Price.ToString("N0") جنيه</small>
                                </div>
                                <div class="col-md-3">
                                    <form method="post" asp-page-handler="UpdateQuantity" class="d-flex align-items-center">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <input type="hidden" name="storeSlug" value="@Model.StoreSlug" />
                                        <button type="submit" name="quantity" value="@(item.Quantity - 1)" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-dash"></i>
                                        </button>
                                        <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control form-control-sm mx-2 text-center" style="width: 60px;" readonly>
                                        <button type="submit" name="quantity" value="@(item.Quantity + 1)" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-plus"></i>
                                        </button>
                                    </form>
                                </div>
                                <div class="col-md-2">
                                    <strong>@item.Total.ToString("N0") جنيه</strong>
                                </div>
                                <div class="col-md-1">
                                    <form method="post" asp-page-handler="Remove" onsubmit="return confirm('هل تريد حذف هذا المنتج؟');">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <input type="hidden" name="storeSlug" value="@Model.StoreSlug" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }

                        <div class="d-flex justify-content-between mt-3">
                            <a asp-page="/Stores/View" asp-route-slug="@Model.StoreSlug" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-right"></i> متابعة التسوق
                            </a>
                            <form method="post" asp-page-handler="Clear" onsubmit="return confirm('هل تريد تفريغ السلة؟');">
                                <input type="hidden" name="storeSlug" value="@Model.StoreSlug" />
                                <button type="submit" class="btn btn-outline-danger">
                                    <i class="bi bi-trash"></i> تفريغ السلة
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">ملخص الطلب</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>المجموع الفرعي:</span>
                            <strong>@Model.Cart.SubTotal.ToString("N0") جنيه</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>رسوم الشحن:</span>
                            <strong>@Model.Cart.ShippingFee.ToString("N0") جنيه</strong>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <h5>الإجمالي:</h5>
                            <h5 class="text-primary">@Model.Cart.Total.ToString("N0") جنيه</h5>
                        </div>
                        <a asp-page="/Checkout/Index" asp-route-storeSlug="@Model.StoreSlug" class="btn btn-primary btn-lg w-100">
                            إتمام الطلب
                            <i class="bi bi-arrow-left"></i>
                        </a>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="bi bi-shield-check"></i> الدفع الآمن
                        </h6>
                        <p class="card-text small text-muted">
                            جميع المعاملات محمية ومشفرة لضمان أمان بياناتك
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-cart-x display-1 text-muted"></i>
            <h3 class="mt-3">السلة فارغة</h3>
            <p class="text-muted">لم تقم بإضافة أي منتجات بعد</p>
            <a asp-page="/Stores/View" asp-route-slug="@Model.StoreSlug" class="btn btn-primary">
                ابدأ التسوق الآن
            </a>
        </div>
    }
</div>