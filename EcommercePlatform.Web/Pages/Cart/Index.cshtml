@page
@model EcommercePlatform.Web.Pages.Cart.IndexModel
@{
    ViewData["Title"] = "سلة التسوق";
}

<div class="container my-5">
    <h2 class="mb-4">سلة التسوق الخاصة بك</h2>

    @if (Model.Cart != null && Model.Cart.Items.Any())
    {
        <div class="row">
            <div class="col-lg-8">
                @foreach (var item in Model.Cart.Items)
                {
                    <div class="card mb-3">
                        <div class="row g-0">
                            <div class="col-md-2 d-flex align-items-center justify-content-center p-2">
                                @{
                                    // <-- تحديث مهم: هذا هو المنطق الجديد لعرض الصورة
                                    var imageUrl = item.Product.Images?.FirstOrDefault()?.Url ?? "/images/placeholder.png";
                                }
                                <img src="@imageUrl" class="img-fluid rounded-start" alt="@item.Product.Name" style="max-height: 120px; max-width: 100%; object-fit: contain;">
                            </div>
                            <div class="col-md-10">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <h5 class="card-title">@item.Product.Name</h5>
                                        <form method="post" asp-page-handler="RemoveItem">
                                            <input type="hidden" name="cartItemId" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">&times;</button>
                                        </form>
                                    </div>
                                    <p class="card-text"><small class="text-muted">@item.Product.Description?.Substring(0, Math.Min(item.Product.Description.Length, 100))...</small></p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            <span>الكمية: @item.Quantity</span>
                                        </div>
                                        <p class="card-text fs-5 fw-bold mb-0">@((item.Product.Price * item.Quantity).ToString("C"))</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">ملخص الطلب</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between">
                                <span>المجموع الفرعي</span>
                                <strong>@Model.Cart.Items.Sum(i => i.Quantity * i.Product.Price).ToString("C")</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>الشحن</span>
                                <span>مجاني</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between bg-light">
                                <span class="fw-bold">الإجمالي</span>
                                <strong class="fw-bold">@Model.Cart.Items.Sum(i => i.Quantity * i.Product.Price).ToString("C")</strong>
                            </li>
                        </ul>
                        <a asp-page="/Checkout/Index" class="btn btn-primary w-100 mt-3">إتمام عملية الشراء</a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center">
            <p>سلة التسوق فارغة.</p>
            <a asp-page="/Index" class="btn btn-primary">تصفح المنتجات</a>
        </div>
    }
</div>
